# MySQL connection (SQLAlchemy URL)
# Example: mysql+pymysql://user:password@host:3306/automatica
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/automatica

# CORS origins for static site (comma separated). For GitHub Pages:
# CORS_ALLOW_ORIGINS=https://<username>.github.io
CORS_ALLOW_ORIGINS=*

# JWT and Admin
JWT_SECRET=change-this-secret
JWT_EXPIRE_HOURS=12
ADMIN_USERNAME=admin
# Prefer hash in production. Generate with /auth.get_password_hash utility if needed.
# ADMIN_PASSWORD_HASH=
# For local/dev only:
ADMIN_PASSWORD=admin123

# Rate for computed shipping fee when order.shipping_fee is NULL
RATE_PER_KG=0

